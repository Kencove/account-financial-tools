<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div data-key="account" position="inside">
                <h2>Inventory Revaluation</h2>
                <div
                    class="row mt16 o_settings_container"
                    name="inventory_revaluation_setting_container"
                >
                    <div
                        class="col-12 col-lg-6 o_setting_box"
                        id="inventory_revaluation"
                    >
                        <div class="o_setting_left_pane">
                            <field name="revaluation_auto_created" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label
                                string="Inventory Revalaution"
                                for="revaluation_auto_created"
                            />
                            <div class="text-muted">
                                If the Price in the vendor bill is different of the
                                price of the incoming valuation layers do an
                                automated revaluation of the layers and create
                                a stock journal entry to revaluate
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
